<?xml version="1.0" encoding="UTF-8" ?>
<themeeditor>
		 
		<author>leotheme</author>
	<name>Live Theme Editor</name>	
	<layout>
		
		<item>
			<block>Layout</block>
			<default>fullwidth</default>
			<option>
				 <text>Full Width</text>
				 <value>fullwidth</value>
			</option> 
			<option>
				 <text>Boxed Large</text>
				 <value>boxed-lg</value>
			</option>
			 
		</item>
		<item>
			<label>Main Content Home FullWidth</label>
			<block>home_container_full</block>
			<default>0</default>
			<option>
				<text>No</text>
				<value>0</value>
			</option> 
			<option>
				<text>Yes</text>
				<value>1</value>
			</option>
		</item>
        <item>
            <block>Quickview</block>
            <default>0</default>
            <option>
                <text>Enable</text>
                <value>1</value>
            </option>
            <option>
                <text>Disable</text>
                <value>0</value>
            </option>
        </item>
	</layout>
</themeeditor>